<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board">

	<resultMap id="boardResult" type="post">
		<id property="id" column="ID" />
		<result property="title" column="TITLE" />
		<result property="content" column="CONTENT" />
		<result property="writer" column="WRITER" />
		<result property="image_file" column="IMAGE_FILE" />
		<result property="reg_date" column="REG_DATE" />
		<result property="board_id" column="BOARD_ID" />
	</resultMap>
	
	<insert id="insertBoard">
		<![CDATA[
			INSERT INTO POST(ID, TITLE, CONTENT, WRITER, BOARD_ID)
			VALUES((SELECT NVL(MAX(ID),1) FROM POST)+1, #{title}, #{content}, #{writer}, #{board_id})
		]]>
	</insert>
	
	<select id="getBoardList" resultType="post">
		<![CDATA[
			SELECT *
			FROM POST
			WHERE BOARD_ID = #{board_id}
		]]>
	</select>
	
	<select id="detailBoard" resultType="post">
		<![CDATA[
			SELECT *
			FROM POST
			WHERE ID = #{id}
		]]>
	</select>
	
	<update id="updateBoard">
		<![CDATA[
			UPDATE POST
			SET TITLE=#{title}, CONTENT=#{content}
			WHERE ID = #{id}
		]]>
	</update>
	
	<delete id="deleteBoard">
		<![CDATA[
			DELETE FROM POST
			WHERE ID = #{id}
		]]>
	</delete>

</mapper>